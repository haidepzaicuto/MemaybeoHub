-- Variables for music
local currentSound = nil
local isPlaying = false
local loopEnabled = false

-- Functions
local function createSound(id)
    if currentSound then
        currentSound:Stop()
        currentSound:Destroy()
    end
    currentSound = Instance.new("Sound", game.Workspace)
    currentSound.SoundId = "rbxassetid://" .. id
    currentSound.Volume = 0.5
    currentSound.Looped = loopEnabled
    currentSound:Play()
    isPlaying = true
    Library:Notify("â™ª Äang chÆ¡i nháº¡c má»›i 2026!", 4)
end

local function togglePlayPause()
    if currentSound then
        if isPlaying then
            currentSound:Pause()
        else
            currentSound:Resume()
        end
        isPlaying = not isPlaying
        Library:Notify(isPlaying and "â–¶ï¸ Play" or "â¸ï¸ Pause", 2)
    end
end

-- Music Controls
TabMusic:CreateInput({
    Name = "Nháº­p ID Nháº¡c (rbxassetid://...)",
    PlaceholderText = "VÃ­ dá»¥: 7551431783",
    RemoveTextAfterFocusLost = false,
    Callback = function(Text)
        local id = Text:match("%d+")
        if id and tonumber(id) then
            createSound(id)
        else
            Library:Notify("ID khÃ´ng há»£p lá»‡! âŒ", 3)
        end
    end
})

TabMusic:CreateButton({
    Name = "â–¶ï¸ Play / â¸ï¸ Pause",
